{
  "compilerOptions": {
    "types": ["@types/node"],
    "typeRoots": ["node_modules/@types"],
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": ".",
    "resolveJsonModule": true
  },
  "include": ["src"]
}
